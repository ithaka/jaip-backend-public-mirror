{
  "name": "jaip-backend",
  "packageManager": "yarn@4.10.3",
  "scripts": {
    "build": "tsc",
    "dev": "LOG_LEVEL=info nodemon  --inspect src/server.ts",
    "test": "LOG_LEVEL=error jest src/ --maxWorkers=50%",
    "test:ci": "LOG_LEVEL=error jest src/ --runInBand",
    "postinstall": "husky && prisma generate",
    "pre-commit": "lint-staged",
    "type-check": "tsc --noEmit",
    "lint:ci": "eslint src",
    "lint": "yarn lint:ci --fix",
    "format:ci": "prettier --check ./src",
    "format": "yarn format:ci --write"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.16.2",
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "json-2-csv": "^5.5.9",
    "pg": "^8.16.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.36.0",
    "@jest/types": "^30.0.5",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.10.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.6",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "babel-jest": "^30.1.2",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.2.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "resolutions": {
    "form-data": "^4.0.4",
    "@eslint/plugin-kit": "^0.4.0"
  },
  "lint-staged": {
    "src": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
